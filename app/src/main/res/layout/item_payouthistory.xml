<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="3dp"
    android:background="@drawable/btn_bg_white2_curve"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/payout"
            android:layout_margin="10dp"
            android:tint="@color/red"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_useerame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John Smith"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn_view"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:background="@drawable/btn_bg_lightblue_curve"
                    android:text="View"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>

            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7sp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/txt_compeltename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:textColor="@color/lightblue"
        android:layout_weight="1"
        android:textSize="15sp"
     />
    <TextView
        android:id="@+id/txt_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12/02/2020"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textAlignment="textEnd"
        />
</LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_sttaus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Payments are in Procesing!"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:background="@color/lightgray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payout Amount"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_marginRight="10dp"
                android:textColor="@color/gray"
                android:textSize="11sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_usedpin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Used Pin : 1234"
            android:layout_weight="1"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txt_amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$300"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="22sp"
          />
    </LinearLayout>
</LinearLayout>
